{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
    "services/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}